        <Button x:Name="button3" Content="Выйти" HorizontalAlignment="Left" Margin="587.8,210.4,0,0" VerticalAlignment="Top" Width="181.8" Click="cmClose" Height="60.197" FontFamily="Monotype Corsiva" FontSize="18" Background="#FFA391FF"/>

    </Grid>
